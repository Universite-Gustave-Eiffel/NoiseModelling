                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <reporting>
    <plugins>
        <!-- Javadoc generation -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>3.11.2</version>
            <configuration>
                <doclint>all,-missing</doclint>
                <quiet>true</quiet>
            </configuration>
        </plugin>
    </plugins>
</reporting>
</project>
